<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mulkearn.kevin.pixelcolor.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_above="@+id/hexText"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/hexText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rgbText"
        android:layout_toEndOf="@+id/colorDisplay"
        android:layout_toStartOf="@+id/captureButton"
        android:layout_marginStart="5dp"
        android:text="Hex:#000000"
        android:textSize="15sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/rgbText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hsvText"
        android:layout_toEndOf="@+id/colorDisplay"
        android:layout_toStartOf="@+id/captureButton"
        android:layout_marginStart="5dp"
        android:text="rgb(0,0,0)"
        android:textSize="15sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/hsvText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/colorDisplay"
        android:layout_toStartOf="@+id/captureButton"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:text="hsv(0Â°,0%,0%)"
        android:textSize="15sp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/searchButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="5dp"
        android:onClick="onOpenClick"
        android:background="@drawable/image_icon"/>

    <Button
        android:id="@+id/captureButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/searchButton"
        android:background="@drawable/camera_icon"
        android:onClick="onCaptureClick" />


    <TextView
        android:id="@+id/colorDisplay"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:background="#000000"/>

</RelativeLayout>
